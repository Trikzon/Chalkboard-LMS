<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lms.FrontEnd.Maui.Views.LoginPage"
             Title="Login">
    <ContentPage.Content>
        <ScrollView>
            <Grid ColumnDefinitions="*, *, *">
                <Grid RowDefinitions="*, Auto, Auto, Auto, 2*"
                      Grid.Column="1">
                    <Label Text="Chalkboard LMS"
                           FontSize="48"
                           HorizontalTextAlignment="Center"
                           Margin="0, 0, 0, 32"
                           TextDecorations="Underline"
                           Grid.Row="1"/>
                    <Button Text="I am an Instructor"
                            Clicked="Instructor_ButtonClicked"
                            Grid.Row="2"
                            Margin="0, 0, 0, 16"/>
                    <Button Text="I am a Student"
                            Clicked="Student_ButtonClicked"
                            Grid.Row="3"/>
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>