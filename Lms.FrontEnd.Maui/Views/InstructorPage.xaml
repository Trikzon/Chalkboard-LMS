<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lms.FrontEnd.Maui.Views.InstructorPage"
             Title="Instructor"
             x:Name="Page">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>
                <Label>Courses</Label>
                <CollectionView ItemsSource="{Binding Courses}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Button Text="{Binding Course.Name}"
                                    Command="{Binding Path=CourseCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                    CommandParameter="{Binding .}"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>